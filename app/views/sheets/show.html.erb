<% content_for :dynamic_js do %>
	<style type="text/css">
		#map {
			width: 800px;
			height: 600px;
		}
	</style>
	<%= javascript_include_tag "sheet", {:id => "sheetdata", "data-map" => "#{@map.to_json}"} %>
<% end %>

<p id="notice"><%= notice %></p>

<div id="map"></div>

<p>
  <b>Status:</b>
  <%= @sheet.status %>
</p>

<p>
  <b>Bbox:</b>
  <%= @sheet.bbox %>
</p>

<p>
  <b>Map:</b>
  <%= @sheet.map_id %>
</p>

<p>
  <b>Map url:</b>
  <%= @sheet.map_url %>
</p>


<%= link_to 'Edit', edit_sheet_path(@sheet) %> |
<%= link_to 'Back', sheets_path %>
