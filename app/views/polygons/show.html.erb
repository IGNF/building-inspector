<% content_for :dynamic_js do %>
  <style type="text/css">
    #map {
      width: 300px;
      height: 300px;
    }
  </style>
  <%= javascript_include_tag "admin/polygon", {:id => "polydata", "data-map" => "#{@map.to_json}", "data-fixes" => "#{@fixes.to_json}"} %>
<% end %>

<p id="notice"><%= notice %></p>

<div id="map"></div>

<p>
  <b>Flags:</b>
  <%
  yes_count = 0
  no_count = 0
  fix_count = 0
  all_count = 0
  %>
  <% @polygon.flags.each do |f| %>
  <%
  if f.flag_type == "address"
  %>
  <br />address: <%= link_to_unless f.flag_value == "NONE", "##{f.flag_value}", f %>
  <% elsif f.flag_type == "geometry"  %>
  <%
  if f.flag_value == "yes"
    yes_count = yes_count + 1
  end
  if f.flag_value == "no"
    no_count = no_count + 1
  end
  if f.flag_value == "fix"
    fix_count = fix_count + 1
  end
  %>
  <% elsif f.flag_type == "color"  %>
  <br />color: <%= link_to "#{f.flag_value}", f %>
  <% end %>
  <%
  all_count = all_count + 1
  %>
  <% end %>
  <% if all_count > 0 %>
  <br />
  yes: <%= yes_count %> (<%= (yes_count.to_f / all_count.to_f * 100.0).round %>%)<br />
  no: <%= no_count %> (<%= (no_count.to_f / all_count.to_f * 100.0).round %>%)<br />
  fix: <%= fix_count %> (<%= (fix_count.to_f / all_count.to_f * 100.0).round %>%)<br />
  <% end %>
</p>

<p>
  <b>DN:</b>
  <%= @polygon.dn %>
</p>

<p>
  <b>Flag count:</b>
  <%= all_count %>
</p>

<p>
  <b>Geometry:</b>
  <%= @polygon.geometry %>
</p>

<p>
  <b>Status:</b>
  <%= @polygon.status %>
</p>

<p>
  <b>Centroid:</b>
  <%= @polygon.centroid_lat %>, <%= @polygon.centroid_lon %>
</p>

<p>
  <b>Vectorizer json:</b>
  <%= @polygon.vectorizer_json %>
</p>

<p>
  <b>Sheet:</b>
  <%= link_to @polygon.sheet_id, @polygon.sheet %>
</p>

<p>
  <b>Color:</b>
  <%= @polygon.color %>
</p>


<%= link_to 'Edit', edit_polygon_path(@polygon) %> |
<%= link_to 'Back', polygons_path %>
