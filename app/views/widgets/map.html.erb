<% content_for :dynamic_js do %>
  <style type="text/css">
    .spinner {
      left: 50%;
      top: 100px;
    }
    #container, #map {
      width: 100%;
      height: 100%;
    }
    #stats {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      padding: 10px;
      background: rgba(1,1,1,0.5);
    }
    #stats p {
      font-family: Kievit, Lato, Helvetica, Arial, sans-serif;
      font-size: 18px;
      color: rgb( 220, 220, 220 ) !important;
    }
    #stats a {
      color: white !important;
      text-decoration: none;
    }
  </style>
  <%= javascript_include_tag "widgets/map", {:id => "data", "data-map" => "#{@data[:sheet].to_json}"} %>
<% end %>

<div id="map"></div>
<div id="stats">
  <p>
    <a href="http://buildinginspector.nypl.org" title="click to visit NYPL Building Inspector">NYPL Building Inspector</a>
  </p>
  <p>Buildings in sheet so far: <%= @data[:polygons] %></p>
</div>
