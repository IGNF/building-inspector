<% content_for :page_title do %>Building Inspector by NYPL Labs<% end %>

<% content_for :dynamic_js do %>
	<%= stylesheet_link_tag    "progress", :media => "all" %>
	<%= stylesheet_link_tag    "lib/MarkerCluster", :media => "all" %>
	<%= stylesheet_link_tag    "lib/MarkerCluster.Default", :media => "all" %>
	<!--[if lte IE 8]>
	<%= stylesheet_link_tag    "lib/MarkerCluster.Default.ie", :media => "all" %>
	<![endif]-->

	<%= javascript_include_tag "progress", {:id => "progressjs", "data-server" => CGI.escape("#{request.protocol}#{request.host_with_port}"), "data-progress" => @progress} %>

	<%= javascript_include_tag "lib/leaflet.markercluster" %>
<% end %>


<%= render :partial => "partials/nav" %>

<div id="main-container">
	<div id="legend">
		<ul>
			<li><span class="color yes"></span> Yes</li>
			<li><span class="color no"></span> No</li>
			<li><span class="color fix"></span> Fix</li>
		</ul>
		<%= link_to "ALL PROGRESS", "/fixer/progress_all", :class => "legend-link" %>
	</div>
	<div id="map-container" class="progress">
		<div id="map"></div>
	</div>
</div>
<div id="controls">
	<%= render :partial => "partials/score" %>
</div>
