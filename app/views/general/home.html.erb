<% content_for :page_title do %>Building Inspector<% end %>
<% content_for :dynamic_js do %>
	<script type="text/javascript">
	// scroll to top (hide bar in ios)
	window.addEventListener("load",function() {
		setTimeout(function(){
			window.scrollTo(0, 1);
		}, 0);
	});
	</script>
	<style>
	@media screen and (min-width: 480px) {
		#main-container {height: 100%;}
	}
	</style>
<% end %>

<%= render :partial => "partials/nav" %>

<div id="main-container">
	<h3>Help trace New York City's past</h3>
	<div id="logo-background">
		<%= link_to "GO!", "/fixer/building", :id => "link-try" %>
	</div>
	<div class="intro">
		<p>Brought to you by:<br /><a href="http://www.nypl.org/collections/labs">NYPL Labs</a> and the <a href="http://www.nypl.org/locations/schwarzman/map-division">Lionel Pincus and Princess Firyal Map Division</a></p>
	</div>
</div>